<h1><%= @reading_text.title %></h1>

<p><%= @reading_text.content %></p>

<p><strong><%= @reading_text.word_count %></strong> mots</p>

<hr>

<h2>Lancer une séance</h2>

<%= form_with url: "/sessions/start", method: :post, data: { turbo: false } do %>
  <%= hidden_field_tag :reading_text_id, @reading_text.id %>

  <!-- On ajoutera student_id quand on aura le contexte -->
  <p>
    <%= label_tag :student_id, "Élève" %><br>
    <%= select_tag :student_id, options_from_collection_for_select(Student.all, :id, :first_name) %>
  </p>

  <%= submit_tag "Commencer la lecture" %>
<% end %>

<hr>

<p>
  <%= link_to "Retour aux textes", reading_texts_path %>
</p>